<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:layout_height="match_parent"
    android:weightSum="1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.9">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="15dp"
            >
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/measure_select_help"
                android:textSize="18dp"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="center"
                android:paddingBottom="5dp"/>

            <TextView
                android:text="@string/part_string"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:paddingTop="5dp"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/select_part"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                />

            <TextView
                android:text="@string/partserial_string"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:paddingTop="5dp"
                android:textSize="18sp" />
            <Spinner
                android:id="@+id/select_work"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>

            <TextView
                android:text="@string/work_string"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:paddingTop="5dp"
                android:textSize="18sp" />
            <Spinner
                android:id="@+id/select_process"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
        </LinearLayout>
    </ScrollView>

    <Button
        android:text="@string/measure_select_confirm"
        android:textSize="24dp"
        android:layout_width="500dp"
        android:maxWidth="500dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_success"
        android:textColor="@color/white"
        android:id="@+id/button"
        android:layout_weight="0.1" />

</LinearLayout>