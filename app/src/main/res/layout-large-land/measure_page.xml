<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:weightSum="10"
    android:id="@+id/measureContent">
    

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="10"
        android:layout_weight="5">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="10">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="15dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/measure_select_help"
                    android:textSize="24dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="center"
                    android:paddingBottom="5dp"/>

                <TextView
                    android:text="@string/part_string"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView5"
                    android:paddingTop="5dp"
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/select_part"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    />

                <TextView
                    android:text="@string/partserial_string"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView6"
                    android:paddingTop="5dp"
                    android:textSize="18sp" />
                <Spinner
                    android:id="@+id/select_work"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"/>

                <TextView
                    android:text="@string/work_string"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView7"
                    android:paddingTop="5dp"
                    android:textSize="18sp" />
                <Spinner
                    android:id="@+id/select_process"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"/>
            </LinearLayout>

        </ScrollView>

        <Button
            android:text="@string/measure_select_confirm"
            android:textSize="24dp"
            android:layout_width="match_parent"
            android:maxWidth="500dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_success"
            android:layout_weight="2"
            android:textColor="@color/white"
            android:id="@+id/button"/>

    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/measure_picture_title"
            android:textSize="24dp"
            android:textColor="@color/colorPrimary"
            android:layout_gravity="center"
            android:paddingBottom="5dp"/>

        <ImageView
            android:layout_margin="15dp"
            android:id="@+id/measImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

</LinearLayout>