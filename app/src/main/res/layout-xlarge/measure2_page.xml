<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:weightSum="1">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg" >

        <Button
            android:text="上一筆"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2" />

        <TextView
            android:text="@string/txt_default"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textView"
            android:textSize="32dp"
            android:layout_weight="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textAlignment="center" />

        <Button
            android:text="下一筆"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button3" />

    </LinearLayout>

    <LinearLayout

        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:padding="15dp"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_weight="3"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="32dp"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="center"
                android:text="@string/meas_view_title"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="24dp"
                android:text="@string/meas_view_help"
                android:id="@+id/textView9" />

            <ImageView
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                app:srcCompat="@android:drawable/gallery_thumb"
                android:id="@+id/imageView" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="7"
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="32dp"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="center"
                android:text="@string/meas_data_title"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">
                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/device"
                        android:textSize="20sp"/>
                    <Space android:layout_width="5dp"
                        android:layout_height="wrap_content"/>
                    <TextView android:id="@+id/device_model"
                        android:text="@string/txt_default"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"/>
                </LinearLayout>

                <LinearLayout android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">
                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/meas_data"
                        android:textSize="24sp"/>
                    <Space android:layout_width="5dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <TextView
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:text="1111 mm"
                    android:layout_width="match_parent"
                    android:textColor="@color/colorPrimaryDark"
                    android:background="@drawable/border_bottom"
                    android:textStyle="bold"
                    android:textSize="50dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView3"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_gravity="bottom"
                android:weightSum="1"
                android:layout_height="wrap_content">

                <Button
                    android:text="重新選擇"
                    android:layout_weight="0.5"
                    android:layout_margin="10dp"
                    android:textSize="18dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_warning"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:id="@+id/reset"
                    android:layout_width="100dp" />

                <Button
                    android:layout_weight="0.5"
                    android:text="上傳資料"
                    android:textSize="18dp"
                    android:layout_margin="10dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_success"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:id="@+id/upload"
                    android:layout_width="100dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>